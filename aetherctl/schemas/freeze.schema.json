{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aether-bot.local/schemas/freeze.schema.json",
  "title": "Aether Shell Freeze Snapshot",
  "type": "object",
  "required": ["incubation_id", "created_at", "main_sha", "lockfile_hash", "schema_version"],
  "additionalProperties": false,
  "properties": {
    "incubation_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "main_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
    "lockfile_hash": { "type": "string", "minLength": 1 },
    "schema_version": { "type": "string", "minLength": 1 },
    "config_template_version": { "type": "string" },
    "baseline_ref": { "type": ["string", "null"] }
  }
}
