{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aether-bot.local/schemas/baseline.schema.json",
  "title": "Aether Shell Baseline Snapshot",
  "type": "object",
  "required": ["main_sha", "captured_at", "tests"],
  "additionalProperties": false,
  "properties": {
    "main_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
    "captured_at": { "type": "string", "format": "date-time" },
    "tests": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "unit": { "$ref": "#/$defs/testStats" },
        "integration": { "$ref": "#/$defs/testStats" }
      }
    },
    "flaky_tests": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "$defs": {
    "testStats": {
      "type": "object",
      "required": ["total", "passed", "failed", "duration_ms"],
      "additionalProperties": false,
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "passed": { "type": "integer", "minimum": 0 },
        "failed": { "type": "integer", "minimum": 0 },
        "duration_ms": { "type": "number", "minimum": 0 }
      }
    }
  }
}
