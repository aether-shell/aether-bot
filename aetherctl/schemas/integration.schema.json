{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aether-bot.local/schemas/integration.schema.json",
  "title": "Aether Shell Integration Record",
  "type": "object",
  "required": [
    "incubation_id", "created_at", "source_branch", "target_branch",
    "merge_strategy", "risk_level", "change_type", "files_changed",
    "lines_added", "lines_removed"
  ],
  "additionalProperties": false,
  "properties": {
    "incubation_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "source_branch": { "type": "string", "minLength": 1 },
    "target_branch": { "type": "string", "const": "develop" },
    "merge_strategy": { "type": "string", "enum": ["merge", "rebase", "cherry-pick"] },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "resolution", "rationale"],
        "additionalProperties": false,
        "properties": {
          "file": { "type": "string", "minLength": 1 },
          "resolution": { "type": "string", "enum": ["ours", "theirs", "manual"] },
          "rationale": { "type": "string" }
        }
      },
      "default": []
    },
    "risk_level": { "type": "string", "enum": ["low", "medium", "high"] },
    "risk_override": {
      "type": "object",
      "required": ["overridden"],
      "additionalProperties": false,
      "properties": {
        "overridden": { "type": "boolean" },
        "original_level": { "type": ["string", "null"] },
        "reason": { "type": ["string", "null"] },
        "approved_by": { "type": ["string", "null"] }
      }
    },
    "change_type": { "type": "string", "enum": ["feature", "bugfix", "dependency", "upstream", "refactor"] },
    "files_changed": { "type": "array", "items": { "type": "string" } },
    "lines_added": { "type": "integer", "minimum": 0 },
    "lines_removed": { "type": "integer", "minimum": 0 }
  }
}
